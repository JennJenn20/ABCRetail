@model IEnumerable<ABCRetailWebApplication.Models.Order>

@{
    ViewData["Title"] = "Order List";
}

<h1>Order List</h1>

<p>
    <a asp-action="Create">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Customer Id</th>
            <th>Product Id</th>
            <th>Quantity</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerId</td>
                <td>@order.ProductId</td>
                <td>@order.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
